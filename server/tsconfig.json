{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src"],
    "ts-node": { "swc": true }
}
